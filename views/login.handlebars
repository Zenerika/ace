<div id="signin">
  <form action="/login" method="post">
    <p class="h3">Already a Member? Log In</p>
    {{#if signup}}
    <div class="alert alert-success" role="alert">
      {{this.signup}}
    </div>
    {{/if}}
    <div class="form-group">
      <label>Email Address</label>
      <input type="email" class="form-control" name="emailLogin" aria-describedby="emailHelp" placeholder="Email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="passwordLogin" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <div id="googleSubmit">
    <a href=auth/google>
      <button type="button" class="btn btn-primary">Login with Google</button>
    </a>
  </div>
</div>
